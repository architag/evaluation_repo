<div class="profile_info">
  <h2>Customer</h2>
  <hr>
    <div id="customer_data">
      <div id="customer_image_data">
        <%= image_tag @customer.image.display_image if @customer.image.image_file.attached? %>
      </div>
      <div id="customer_info">
        <p class="details">
          <b>Name:</b> <%= @customer.name %><br>
          <b>Email:</b> <%= @customer.email %><br>
          <b>Age:</b> <%= @customer.age %><br>
          <b>Status:</b> Email Verified<br>
          <b><%= last_won(@customer.last_won_on) %></b><br> 
        </p>
      </div>
    </div>
</div>
<br>
<div class="profile_info">
  <h2>Tickets</h2>
  <hr>
  <h3>Won Prizes</h3>
  <% if @tickets_won.count != 0 %>
    <div class="panels row">
      <% @tickets_won.each do |ticket| %>
          <div class="panel customer_tickets col-md-3">
            <div class="panel-img-top center">
              <%= image_tag ticket.image.display_image if ticket.image.image_file.attached? %>
            </div>
            <div class="panel-body details">
              <b>Ticket No:</b> <%= ticket.ticket_no %><br>
              <b>Prize Type:</b> <%= ticket.type.split("Ticket")[0] %><br>
              <b>Expiration Date:</b> <%= ticket.expiration_date %><br>
              <b>Position Won:</b> <%= position(ticket.position_won) %><br> 
              <b>Status:</b> <%= validity_status(ticket.is_valid)%>
            </div>
          </div>
      <% end %>
    </div>
    <div class="center">
      <%= will_paginate @tickets_won %>
    </div>
  <% else %>
  <br>
    <h4>No Tickets Found</h4>
  <% end %>
  <hr>

  <h3>Not Won / Expired</h3>
  <% if @tickets_not_won.count != 0 %>
    <div class="panels row">
      <% @tickets_not_won.each do |ticket| %>
          <div class="panel customer_tickets col-md-3">
            <div class="panel-img-top center">
              <%= image_tag ticket.image.display_image if ticket.image.image_file.attached? %>
            </div>
            <div class="panel-body details">
              <b>Ticket No:</b> <%= ticket.ticket_no %><br>
              <b>Prize Type:</b> <%= ticket.type.split("Ticket")[0] %><br>
              <b>Expiration Date:</b> <%= ticket.expiration_date %><br>
              <b>Position Won:</b> <%= position(ticket.position_won) %><br> 
              <b>Status:</b> <%= validity_status(ticket.is_valid)%>
            </div>
          </div>
      <% end %>
    </div>
    <div class="center">
      <%= will_paginate @tickets_not_won %>
    </div>
  <% else %>
    <br>
    <h4>No Tickets Found</h4>
  <% end %>
</div>
